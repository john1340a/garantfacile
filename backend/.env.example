# Application
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL="postgresql://garantfacile:password@localhost:5432/garantfacile_db"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Redis (BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_MENSUEL=price_monthly_id
STRIPE_PRICE_ANNUEL=price_annual_id

# Filigrane Facile API (watermarking)
FILIGRANE_API_URL=https://api.filigranefacile.fr
FILIGRANE_API_KEY=your_filigrane_api_key

# GarantFacile Verification API
GARANTFACILE_API_URL=https://api.garantfacile.fr
GARANTFACILE_API_KEY=your_garantfacile_api_key

# Encryption
AES_ENCRYPTION_KEY=your-32-character-aes-key-here!!

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
