// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  LOCATAIRE
  PROPRIETAIRE
  GARANT
  ADMIN
}

enum DocumentType {
  IDENTITE
  REVENU
  QUITTANCE
  CONTRAT
  AUTRE
}

enum DocumentStatus {
  PENDING
  PROCESSING
  DONE
  ERROR
}

enum PlanType {
  MENSUEL
  ANNUEL
}

enum AbonnementStatus {
  ACTIF
  ANNULE
  EXPIRE
  EN_ATTENTE
}

model User {
  id               String       @id @default(uuid())
  email            String       @unique
  passwordHash     String
  role             UserRole     @default(LOCATAIRE)
  firstName        String
  lastName         String
  phone            String?
  consentRgpd      Boolean      @default(false)
  consentMarketing Boolean      @default(false)
  encryptedData    String?      // AES encrypted sensitive data
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  deletedAt        DateTime?    // soft delete for GDPR
  garant           Garant?
  documents        Document[]
  abonnements      Abonnement[]
  auditLogs        AuditLog[]
  consentLogs      ConsentLog[]
}

model Garant {
  id             String   @id @default(uuid())
  userId         String   @unique
  user           User     @relation(fields: [userId], references: [id])
  verified       Boolean  @default(false)
  verificationId String?  // GarantFacile verification ID
  profession     String?
  revenuAnnuel   Float?
  score          Int?     @default(0)
  disponible     Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Document {
  id              String         @id @default(uuid())
  userId          String
  user            User           @relation(fields: [userId], references: [id])
  type            DocumentType
  filename        String
  originalPath    String
  watermarkedPath String?
  status          DocumentStatus @default(PENDING)
  encryptedKey    String?        // AES key for the document
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

model Abonnement {
  id                   String           @id @default(uuid())
  userId               String
  user                 User             @relation(fields: [userId], references: [id])
  stripeCustomerId     String
  stripeSubscriptionId String?
  plan                 PlanType
  status               AbonnementStatus @default(ACTIF)
  currentPeriodEnd     DateTime?
  createdAt            DateTime         @default(now())
  updatedAt            DateTime         @updatedAt
}

model ConsentLog {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  type      String
  value     Boolean
  ipAddress String
  userAgent String
  createdAt DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  action    String
  resource  String
  details   String?
  ipAddress String?
  createdAt DateTime @default(now())
}
